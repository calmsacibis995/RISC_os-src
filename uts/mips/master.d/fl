#include "sys/types.h"
#include "sys/param.h"
#include "sys/buf.h"
#include "sys/scsi.h"

/* floppy driver variable tables */
int flmajor = ##E;				/* external major # */
#define NFLTYPES 7				/* number of types of disks */
struct flop_msel fldisktypes[NFLTYPES] = {	/* preset disk parameters */
/*  low capacity media in HIGH capacity 3 1/2" drive	*/
	{0, {PD_FLOP, sizeof(struct pg_flop), {0x0050, 0x0200, 0x0009, 0x02,
	0x32, 0x2A, 0x50, 0x40, 0x14, 0x20, 0x0D, 0x01, 0x0F, 0x01, 0x01}}},
/*  high capacity media in HIGH capacity 3 1/2" drive	*/
	{0, {PD_FLOP, sizeof(struct pg_flop), {0x0050, 0x0200, 0x0012, 0x02,
	0x64, 0x1B, 0x6C, 0x40, 0x14, 0x20, 0x0A, 0x01, 0x0F, 0x01, 0x01}}},
/*  low capacity media in 2-speed drive (IBM PC 2DD)	*/
	{0, {PD_FLOP, sizeof(struct pg_flop), {0x0050, 0x0200, 0x0009, 0x02,
	0x3C, 0x1B, 0x54, 0x0A, 0x1E, 0x00, 0x0B, 0x19, 0x04, 0x01, 0x00}}},
/*  high capacity media in 2-speed drive (IBM PC 2HD)	*/
	{0, {PD_FLOP, sizeof(struct pg_flop), {0x0050, 0x0200, 0x0012, 0x02,
	0x78, 0x1B, 0x54, 0x0A, 0x1E, 0x00, 0x0B, 0x19, 0x04, 0x01, 0x02}}},
/*  high capacity media in 2-speed drive (IBM PC 2HC)	*/
	{0, {PD_FLOP, sizeof(struct pg_flop), {0x0050, 0x0200, 0x000F, 0x02,
	0x78, 0x1B, 0x54, 0x0A, 0x1E, 0x00, 0x0B, 0x19, 0x04, 0x01, 0x01}}},
/*  low capacity media in 2-speed drive (NEC PC-9801 2DD)	*/
	{0, {PD_FLOP, sizeof(struct pg_flop), {0x0050, 0x0200, 0x0008, 0x02,
	0x3C, 0x1B, 0x54, 0x0A, 0x1E, 0x00, 0x0B, 0x19, 0x04, 0x01, 0x00}}},
/*  high capacity media in 2-speed drive (NEC PC-9801 2HD)	*/
	{0, {PD_FLOP, sizeof(struct pg_flop), {0x004D, 0x0400, 0x0008, 0x02,
	0x78, 0x35, 0x74, 0x0A, 0x1E, 0x00, 0x0B, 0x19, 0x04, 0x01, 0x01}}},
};
int nfltypes = NFLTYPES;
int flexterr = 0;
